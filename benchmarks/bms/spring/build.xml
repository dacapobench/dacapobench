<project name="spring" default="all" basedir="../..">
    <description>Dacapo Spring Benchmark</description>
    <property file="local.properties"/>
    <property file="dacapo.properties"/>

    <property name="bm-name" value="spring"/>
    <property name="bm-version" value="2.7.3"/>  <!-- last release before 3.0, where JDK 17 is MSV -->
    <property name="tomcat-version" value="9.0.65" />
    <property name="tomcat-url" value="${apache.dl.url}/tomcat/tomcat-9/v${tomcat-version}/src"/>
    <property name="tomcat-src-basename" value="apache-tomcat-${tomcat-version}-src"/>
    <property name="tomcat-src" value="${tomcat-src-basename}.tar.gz"/>

    <property name="bm-version-str" value="springboot ${bm-version} petclinic git-9ecdc11 h2 2.1.214 hibernate 5.6.10 tomcat ${tomcat-version}"/>
    <property name="bm-src" value="${bm-name}-${bm-version}-src.tgz"/>
    <property name="git-group" value="spring-projects"/>
    <property name="git-project" value="spring-petclinic"/>
    <property name="bm-git-url" value="${github.url}/${git-group}/${git-project}"/>
    <property name="bm-git-commit" value="89f7b4ee96b8dd354d56ff2211bb1ffe762ba24c"/>


    <import file="../common.xml"/>

    <target name="unpack" depends="untar, patch"/>

    <property name="mvn-home" location="${toolsdir}/apache-maven-${mvn.version}/bin"/>
    <property name="mvn-exe" value="${mvn-home}/mvn"/>
    <condition property="mvn-exe" value="${mvn-home}/mvn.bat">
        <os family="windows"/>
    </condition>
    <condition property="build-script" value="${bm-build-dir}/mvnw.cmd">
        <os family="windows"/>
    </condition>
    <property name="build-script" value="${bm-build-dir}/mvnw"/>

    <target name="bm-prepare-dependency" depends="h2">
        <!-- download apache tomcat 9.0.65 -->
    	<antcall target="check-source">
			<param name="target-dir" value="${bm-downloads}"/>
			<param name="target-url" value="${tomcat-url}"/>
			<param name="target-file" value="${tomcat-src}"/>
		</antcall>
        <untar src="${bm-downloads}/${tomcat-src}" dest="${bm-deps-output-dir}/" compression="gzip"/>
        <!-- patch tomcat -->
        <patch patchfile="${bm-files}/tomcat.patch" dir="${bm-deps-output-dir}" strip="0" ignorewhitespace="yes" failonerror="true"/>
        <!-- build the tomcat embed library -->
        <exec executable="ant" dir="${bm-deps-output-dir}/${tomcat-src-basename}">
            <env key="JAVA_HOME" value="${jdk.11.home}"/>
            <arg line="build-tomcat-jdbc embed"/>
        </exec>
        <mkdir dir="${bm-deps-output-dir}/repo" />
        <!-- install the patched tomcat embed library to the local repo -->
        <exec executable="${mvn-exe}" dir="${bm-deps-output-dir}/${tomcat-src-basename}">
            <env key="JAVA_HOME" value="${jdk.11.home}"/>
            <arg line = "install:install-file" />
            <arg line="-Dfile=${bm-deps-output-dir}/${tomcat-src-basename}/output/embed/tomcat-embed-core.jar"/>
            <arg line="-DgroupId=org.apache.tomcat.embed"/>
            <arg line="-DartifactId=tomcat-embed-core"/>
            <arg line="-Dpackaging=jar"/>
            <arg line="-Dversion=${tomcat-version}-PATCHED"/>
        </exec>
        <exec executable="${mvn-exe}" dir="${bm-deps-output-dir}/${tomcat-src-basename}">
            <env key="JAVA_HOME" value="${jdk.11.home}"/>
            <arg line = "install:install-file" />
            <arg line="-Dfile=${bm-deps-output-dir}/${tomcat-src-basename}/output/embed/tomcat-embed-el.jar"/>
            <arg line="-DgroupId=org.apache.tomcat.embed"/>
            <arg line="-DartifactId=tomcat-embed-el"/>
            <arg line="-Dpackaging=jar"/>
            <arg line="-Dversion=${tomcat-version}-PATCHED"/>
        </exec>
        <exec executable="${mvn-exe}" dir="${bm-deps-output-dir}/${tomcat-src-basename}">
            <env key="JAVA_HOME" value="${jdk.11.home}"/>
            <arg line = "install:install-file" />
            <arg line="-Dfile=${bm-deps-output-dir}/${tomcat-src-basename}/output/embed/tomcat-embed-websocket.jar"/>
            <arg line="-DgroupId=org.apache.tomcat.embed"/>
            <arg line="-DartifactId=tomcat-embed-websocket"/>
            <arg line="-Dpackaging=jar"/>
            <arg line="-Dversion=${tomcat-version}-PATCHED"/>
        </exec>

        <!-- install the our h2 library to the local repo -->
        <exec executable="${mvn-exe}" dir="${bm-deps-output-dir}/${tomcat-src-basename}">
            <env key="JAVA_HOME" value="${jdk.11.home}"/>
            <arg line = "install:install-file" />
            <arg line="-Dfile=${h2-jar}"/>
            <arg line="-DgroupId=com.h2database"/>
            <arg line="-DartifactId=h2"/>
            <arg line="-Dpackaging=jar"/>
            <arg line="-Dversion=${h2-version}-PATCHED"/>
        </exec>
    </target>

    <target name="bm-build" depends="commons-httpclient, bm-prepare-dependency">
        <antcall target="make-executable">
            <param name="target-filename" value="${build-script}"/>
        </antcall>
        <exec executable="${build-script}" dir="${bm-build-dir}" failonerror="true">
            <arg line="package"/>
            <arg line="'-Dtomcat.version=${tomcat-version}-PATCHED'"/>
            <arg line="'-Dh2.version=${h2-version}-PATCHED'"/>
        </exec>
    </target>

    <target name="data">
        <copy file="${bm-files}/workload/requests.txt" todir="${bm-data}"/>
    </target>

    <target name="jar">
        <copy todir="${bm-jars}" flatten="true">
            <fileset dir="${bm-build-dir}/" includes="**/*.jar"/>
            <fileset file="${commons-httpclient-jar}"/>
        </copy>

        <javac srcdir="${bm-src-dir}"  destdir="${bm-build-dir}"
               sourcepath="${bm-src-dir}"
               classpath="${harness-classpath}:${commons-httpclient-jar}"
               source="1.8">
        </javac>
        <jar destfile="${bm-jars}/dacapo-${bm-name}.jar" update="true">
            <fileset dir="${bm-build-dir}">
                <include name="org/dacapo/spring/**"/>
            </fileset>
        </jar>
    </target>
</project>